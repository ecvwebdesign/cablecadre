
	{% for howto in howtolist | reverse %}
		<article{% if howto.url == url %} data-current="current item"{% endif %}>
				<a href="{{ howto.url | url }}">
				<figure class="fig_howto">
					 <img src="/static/img/{{ howto.data.image | url }}" class="img_check" />
					</figure>
						<h3>
					{% if howto.data.title %}
						{{ howto.data.title }}
					{% else %}
						Untitled
					{% endif %}
			</h3>
			{% if howto.data.summary %}
				<p>
					{{ howto.data.summary }}
				</p>
					</a>
			{% endif %}
			<p>
				<time datetime="{{ howto.date | machineDate }}">
					<small>{{ howto.date | readableDate }} by {{ metadata.author.name }}</small>
				</time>
			</p>
			{% if howto.data.tags %}
				<p>
					{% for tag in howto.data.tags %}
		  			{%- if tag != "howto" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %}
		</article>
	{% endfor %}
